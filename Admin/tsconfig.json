{
  "compilerOptions": {
    "jsx": "react",
    //"module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    //"outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true
    //"strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
