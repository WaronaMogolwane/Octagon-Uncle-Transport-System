{
  "name": "octagon-uncle-transport-server",
  "version": "1.0.0",
  "description": "A server that handles HTTP requests from the Octagon Uncle Transport System",
  "main": "server.ts",
  "bin": "./bin/build/server.js",
  "scripts": {
    "dev": "npx tsc & nodemon --inspect-brk ./src/bin/build/server.js",
    "ts-serv": "npx ts-node --esm src/server.ts",
    "rebuild": "npm run clean-all && npm run build",
    "clean-all": "shx rm -rf bin/build && npx tsc --build --clean",
    "debug": "node ./bin/build/server.js",
    "debug:dev": "npx nodemon",
    "build-debug": "npm run build && npm run debug",
    "rebuild-debug": "npm run rebuild && npm run debug",
    "start": "npm run debug:dev",
    "build": "tsc -p .",
    "build:live": "npm run clean-all && npm run build && npm run _copy_base_artifacts && npm run _copy_live_env_file && echo ✅ Build successful for LIVE. || echo ❌ Build failed for LIVE.",
    "build:uat": "npm run clean-all && npm run build && npm run _copy_base_artifacts && npm run _copy_uat_env_file && echo ✅ Build successful for UAT. || echo ❌ Build failed for UAT.",
    "build:development": "npm run clean-all && npm run build && npm run _copy_base_artifacts && npm run _copy_dev_env_file && echo ✅ Build successful for DEVELOPMENT. || echo ❌ Build failed for DEVELOPMENT.",
    "_copy_base_artifacts": "shx cp package.json bin/build/ && shx cp src/ecosystem.config.js bin/build/",
    "_copy_live_env_file": "shx cp ./.env.LIVE bin/build/.env.LIVE",
    "_copy_uat_env_file": "shx cp ./.env.UAT bin/build/.env.UAT",
    "_copy_dev_env_file": "shx cp ./.env bin/build/.env",
    "start-dev": "pm2 start bin/build/ecosystem.config.js --env development",
    "start-uat": "pm2 start bin/build/ecosystem.config.js --env uat",
    "start-live": "pm2 start bin/build/ecosystem.config.js --env live",
    "stop-dev": "pm2 stop bin/build/ecosystem.config.js --env development",
    "stop-uat": "pm2 stop bin/build/ecosystem.config.js --env uat",
    "stop-live": "pm2 stop bin/build/ecosystem.config.js --env live",
    "restart-dev": "pm2 restart bin/build/ecosystem.config.js --env development",
    "restart-uat": "pm2 restart bin/build/ecosystem.config.js --env uat",
    "restart-live": "pm2 restart bin/build/ecosystem.config.js --env live",
    "delete-dev": "pm2 delete bin/build/ecosystem.config.js --env development",
    "delete-uat": "pm2 delete bin/build/ecosystem.config.js --env uat",
    "delete-live": "pm2 delete bin/build/ecosystem.config.js --env live",
    "list": "pm2 list",
    "monit": "pm2 monit",
    "logs": "pm2 logs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WaronaMogolwane/Octagon-Uncle-Transport-System"
  },
  "author": "Nicholai Jamusi & Warona Mogolwane",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WaronaMogolwane/Octagon-Uncle-Transport-System/issues"
  },
  "homepage": "",
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@tsconfig/react-native": "^3.0.5",
    "axios": "^1.7.2",
    "backblaze-b2": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "firebase-admin": "^12.7.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "node-schedule": "^2.1.1",
    "node-windows": "^1.0.0-beta.8",
    "nodemailer": "^6.8.0",
    "pg": "^8.11.3",
    "pino-pretty": "^11.2.2",
    "pm2": "^5.4.3",
    "uuid": "^9.0.0",
    "winston": "^3.14.2",
    "winston-winlog4": "^3.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@types/backblaze-b2": "^1.5.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.16.5",
    "@types/node-schedule": "^2.1.7",
    "@types/node-windows": "^0.1.6",
    "@typescript-eslint/parser": "^6.9.0",
    "nodemon": "^2.0.22",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
