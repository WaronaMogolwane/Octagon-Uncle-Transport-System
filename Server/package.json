{
  "name": "octagon-uncle-transport-server",
  "version": "1.0.0",
  "description": "A server that handles HTTP requests from the Octagon Uncle Transport System",
  "main": "server.ts",
  "scripts": {
    "dev": "npx tsc & nodemon --inspect-brk ./src/bin/build/server.js",
    "ts-serv": "npx ts-node --esm src/server.ts",
    "build": "npx tsc --build",
    "rebuild": "npx tsc --build --clean & npx tsc --build",
    "clean": "npx tsc --build --clean",
    "debug": "node ./src/bin/build/server.js",
    "build-debug": "npm run build & npm run debug",
    "rebuild-debug": "npm run rebuild & npm run debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MajorXp/Octagon-Uncle-Transport-Solutions-System.git"
  },
  "author": "Nicholai Jamusi & Warona Mogolwane",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MajorXp/Octagon-Uncle-Transport-Solutions-System/issues"
  },
  "homepage": "",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/parser": "^6.9.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "nodemon": "^2.0.20"
  }
}
